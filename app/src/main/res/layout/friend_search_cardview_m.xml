<?xml version="1.0" encoding="utf-8"?>

<!-- the cardview which shows the profile details with profilepicture and username is created from this layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_width="180dp"
        android:layout_height="240dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_img_for_search_m"
            app:civ_border_color="@color/purple"
            app:civ_border_width="5dp"
            android:id="@+id/search_prof_pic_m"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/search_profilename_m"
            android:textColor="@color/purple"
            android:layout_marginTop="158dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/search_profilename_m">
        </TextView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/search_user_name_m"
            android:textColor="@color/purple"
            android:layout_marginTop="190dp"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_below="@+id/search_profilename_m"
            android:gravity="center_horizontal"
            android:id="@+id/search_username_m">
        </TextView>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>